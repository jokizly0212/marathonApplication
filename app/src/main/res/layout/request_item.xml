<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:contentDescription="Request Image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/requestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="requestName" />

        <TextView
            android:id="@+id/requestStartPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="requestStartPoint" />

        <TextView
            android:id="@+id/requestStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="requestStartDate" />
    </LinearLayout>
</LinearLayout>